<% layout("/layouts/boilerplate") %>

        <div class="row">
            <div class="col col-8 offset-2">
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <h3>Create a New Listing</h3>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]"
                         class="form-control" 
                         placeholder="Add a catchy title"
                         required>
                         <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">please enter a sort description!</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing</label>
                        <input name="listing[image]" class="form-control" type="file">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]"
                             
                             class="form-control" 
                             placeholder="1999rs /day"
                             required>
                            <div class="invalid-feedback">please enter valid price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]"
                             class="form-control"
                              placeholder="Uttrakhand Nainital"
                              required>
                            <div class="invalid-feedback">please enter valid location!</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" 
                        class="form-control"
                         placeholder="India"
                         required>
                        <div class="invalid-feedback">please enter country!</div>
                    </div>
                    <button class="btn btn-dark btn">Add</button>
                   
                </form>
            </div>
        </div>

