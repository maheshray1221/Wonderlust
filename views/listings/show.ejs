<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-2">
            <div class="col col-8 offset-2">
                <h3>
                    <%= listingdata.title %>
                </h3>
            </div>
            <div class="card col-6 offset-2 listing-card">
                <img src="<%= listingdata.image.url %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text"><b><i>Owned by <%= listingdata.owner.username %> </i></b></p>
                    <p class="card-text">
                        <%= listingdata.description %>
                    </p>
                    <p class="card-text">&#8377;<%= listingdata.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listingdata.location %>
                    </p>
                    <p class="card-text">
                        <%= listingdata.country %>
                    </p>
                </div>
            </div>
        </div>
        <% if(currUser && currUser._id.equals(listingdata.owner._id)) { %>
            <div class="showbtn offset-2">
                <form method="GET" action="/listings/<%= listingdata._id %>/edit">
                    <button class="btn btn-dark">Update</button>
                </form>

                <form method="POST" action="/listings/<%= listingdata._id %>?_method=DELETE">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <% } %>

                <div class="col col-8 offset-2 mb-3">
                    <% if(currUser){ %>
                        <h4>Leave a Review</h4>
                        <form method="post" action="/listings/<%= listingdata._id %>/reviews" novalidate
                            class="needs-validation">
                            <div class="mb-3 mt-3">
                                <fieldset class="starability-slot">
                                    <legend>Rating:</legend>
                                    <input type="radio" id="no-rate" min="1" max="5" class="input-no-rate"
                                        name="review[rating]" value="0" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>


                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" class="form-control" required id="comment" cols="20"
                                    rows="4"></textarea>
                                <div class="invalid-feedback">
                                    Please submit some comment for reviews
                                </div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <hr>
                        <% } %>

                            <% if(listingdata.reviews.length> 0){ %>
                                <div class="row">
                                    <p><b>All Reviews</b></p>
                                    <% for(review of listingdata.reviews ){%>
                                        <div class="card col-5 mb-3 ms-3">
                                            <div class="card-body">
                                                <h5 class="card-title">@<%= review.author.username %>
                                                </h5>
                                                <p class="starability-result card-text"
                                                    data-rating="<%= review.rating %>">
                                                </p>
                                                <p class="card-text">
                                                    <%= review.comment %>
                                                </p>

                                                <form class="mb-3" method="POST"
                                                    action="/listings/<%= listingdata._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                    <button class="btn btn-sm btn-dark">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } %>


                </div>
                <div class="col col-6 offset-2 mb-3">
                    <h3>Where you'll be</h3>
                    <div id="map">

                    </div>
                </div>
                <script>
                    let mapToken = "pk.eyJ1IjoiZGVsdGEtc3R1ZHVlbnQiLCJhIjoiY2xvMDk0MDk0MTVhMTJ3ZDJrcGR5ZDFkaHl4ciJ9.Gj2VU1wvxc7rFVt5E4KLOQ";
                    mapboxgl.accessToken = mapToken;
                    const map = new mapboxgl.Map({
                        container: 'map', // container ID
                        center: [-74.5, 40], // starting position [lng, lat]. Note that lat must be set between -90 and 90
                        zoom: 9 // starting zoom
                    });
                </script>

    </body>